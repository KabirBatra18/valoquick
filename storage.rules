rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Photos for reports are stored under: /firms/{firmId}/reports/{reportId}/photos/{photoId}
    match /firms/{firmId}/reports/{reportId}/photos/{photoId} {
      // Only firm members can read photos
      allow read: if request.auth != null &&
        firestore.exists(/databases/(default)/documents/firms/$(firmId)/members/$(request.auth.uid));

      // Only firm members can upload photos (with size and type restrictions)
      allow write: if request.auth != null &&
        firestore.exists(/databases/(default)/documents/firms/$(firmId)/members/$(request.auth.uid)) &&
        request.resource.size < 10 * 1024 * 1024 && // 10MB limit per photo
        request.resource.contentType.matches('image/.*');

      // Only firm members can delete photos
      allow delete: if request.auth != null &&
        firestore.exists(/databases/(default)/documents/firms/$(firmId)/members/$(request.auth.uid));
    }

    // Firm logos stored under: /firms/{firmId}/logo
    match /firms/{firmId}/logo {
      allow read: if request.auth != null &&
        firestore.exists(/databases/(default)/documents/firms/$(firmId)/members/$(request.auth.uid));
      allow write: if request.auth != null &&
        firestore.exists(/databases/(default)/documents/firms/$(firmId)/members/$(request.auth.uid)) &&
        request.resource.size < 5 * 1024 * 1024 && // 5MB limit for logo
        request.resource.contentType.matches('image/.*');
    }
  }
}
